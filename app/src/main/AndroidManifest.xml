<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.victor.nesthabit">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.BLUETOOTH_PRIVILEGED"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>

    <application
        android:name="com.victor.nesthabit.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.victor.nesthabit.ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.victor.nesthabit.ui.activity.NewBirdcageActivity"/>

        <activity android:name=".ui.activity.RecordActivity"/>
        <activity android:name="com.victor.nesthabit.ui.activity.AlarmActivity"/>

        <service
            android:name="com.victor.nesthabit.service.NetworkService"
            android:enabled="true"
            android:exported="true"/>
        <service android:name="com.victor.nesthabit.service.RecordingService"/>


        <receiver
            android:name="com.victor.nesthabit.broadcast.AlarmReceiver"
            android:enabled="true"
            android:exported="true">
        </receiver>


    </application>

</manifest>