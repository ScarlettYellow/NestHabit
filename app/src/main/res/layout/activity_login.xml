<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.nesthabit.ui.activity.LoginActivity">

    <com.victor.nesthabit.view.CircleImageView
        android:id="@+id/login_logo"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/logo"
        />

    <RelativeLayout
        android:id="@+id/login_way_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:layout_width="60dp"
            android:layout_height="1.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            android:background="@color/text"
            />


        <TextView
            android:id="@+id/login_way"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="登录方式"
            android:textColor="@color/text"
            android:textSize="18dp"
            />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="1.5dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="17dp"
            android:layout_toRightOf="@id/login_way"
            android:background="@color/text"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_qq"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_way_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_background_yellow"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/qq_logo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/qq"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/qq_logo"
            android:text="@string/qq_login"
            android:textColor="@color/white"
            android:textSize="18dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/login_weichat"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/login_qq"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_background_yellow"
        android:elevation="5dp"
        >

        <ImageView
            android:id="@+id/weichat_logo"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/wechat"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/weichat_logo"
            android:text="@string/wechat_login"
            android:textColor="@color/white"
            android:textSize="17dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="鸟窝习惯"
        android:textColor="#b0bec5"
        android:textSize="14dp"
        />

</RelativeLayout>
