<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.nesthabit.ui.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <com.victor.nesthabit.view.CircleImageView
            android:id="@+id/header_image_pop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/header_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:paddingTop="10dp"
            android:text="我的鸟窝"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/header_text"
            android:layout_marginTop="15dp"
            android:background="@color/gray"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">


        <android.support.v4.view.ViewPager
            android:id="@+id/birdcage_view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/main_table"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        >

        <com.victor.nesthabit.view.CircleImageView
            android:id="@+id/person_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher"
            />

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/person_avatar"
            android:layout_centerHorizontal="true"
            android:text="思思缪斯"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/person_name"
            android:id="@+id/fenge_xian1"
            android:layout_marginTop="25dp"
            android:background="@color/gray"/>

        <TextView
            android:id="@+id/person_advise"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/fenge_xian1"
            android:gravity="center"
            android:text="意见反馈"
            android:textSize="18dp"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/person_advise"
            android:background="@color/gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/person_advise"
            android:gravity="center"
            android:id="@+id/quit_app"
            android:text="退出登录/登录"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/quit_app"
            android:background="@color/gray"/>

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
