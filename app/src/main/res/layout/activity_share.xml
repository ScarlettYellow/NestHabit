<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.victor.nesthabit.ui.activity.ShareActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <android.support.v7.widget.CardView
        android:id="@+id/share_card_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/toolbar"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="12dp"
        android:background="@color/white"
        android:elevation="5dp"
        app:cardCornerRadius="10dp"
        >


        <EditText
            android:id="@+id/share_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@null"
            android:hint="@string/share_hint"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColorHint="@color/text_hint"
            android:textCursorDrawable="@drawable/cursor_drawable"
            android:textSize="14sp"
            />
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/submit"
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:layout_below="@+id/share_card_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/btn_background_red"
        android:elevation="5dp"
        android:gravity="center"
        android:text="@string/publish"
        android:textColor="@color/white"
        android:textSize="18sp"
        />
</RelativeLayout>
