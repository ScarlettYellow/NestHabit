<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="180dp"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        android:background="@color/white"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/birdcage_list_image"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:id="@+id/birdcage_list_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birdcage_list_image"
                android:layout_marginTop="5dp"
                android:text="早起的鸟儿有虫吃"
                android:layout_marginLeft="2dp"
                />

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:layout_below="@+id/birdcage_list_text"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:background="#000000"
                />

            <android.support.v7.widget.CardView
                android:id="@+id/birdcage_list_day_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birdcage_list_text"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#18ce31"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                app:cardCornerRadius="5dp">

                <TextView
                    android:id="@+id/birdcage_list_day"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="6/100天"
                    android:textSize="20dp"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/birdcage_list_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/birdcage_list_text"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/birdcage_list_day_card"
                android:text="15人"
                android:textColor="#000000"
                android:textSize="16dp"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>