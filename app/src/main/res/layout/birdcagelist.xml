<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/birdcage_list_image"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/ic_launcher"/>

            <RelativeLayout
                android:id="@+id/title_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/birdcage_list_image"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="4dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/rectangle_red_small"
                    />

                <TextView
                    android:id="@+id/birdcage_list_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:maxEms="6"
                    android:singleLine="true"
                    android:text="早起的鸟儿有虫吃"
                    android:textSize="16dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/progress_layout"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/title_layout"
                android:layout_marginTop="5dp"
                >

                <ProgressBar
                    android:id="@+id/progress_image"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:max="100"
                    android:progress="40"
                    android:progressBackgroundTint="@color/progress_background"
                    android:progressTint="@color/red"
                    />

                <TextView
                    android:id="@+id/progress_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="40/100"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_layout"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                >

                <com.victor.nesthabit.view.CircleImageView
                    android:id="@+id/avatar1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_launcher"

                    />

                <com.victor.nesthabit.view.CircleImageView
                    android:id="@+id/avatar2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/ic_launcher"
                    />

                <com.victor.nesthabit.view.CircleImageView
                    android:id="@+id/avatar3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="30dp"
                    android:src="@mipmap/ic_launcher"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@+id/avatar3"
                    android:text="+15人"
                    android:id="@+id/people"
                    />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>