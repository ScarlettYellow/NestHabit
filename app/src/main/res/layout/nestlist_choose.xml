<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_background"
            android:layout_width="182dp"
            android:layout_height="169dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="6dp"
            android:background="@color/white"
            android:visibility="invisible"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="10dp"
            />

        <android.support.v7.widget.CardView
            android:id="@+id/card"
            android:layout_width="175dp"
            android:layout_height="165dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:elevation="5dp"
            app:cardCornerRadius="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/birdcage_list_image"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/picture_1"/>

                <RelativeLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/birdcage_list_image"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    >

                    <ImageView
                        android:layout_width="2dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="8dp"
                        android:background="@color/red_progress"
                        />

                    <TextView
                        android:id="@+id/birdcage_list_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:maxEms="6"
                        android:maxLines="1"
                        android:text="早起的鸟儿有虫吃"
                        android:textColor="@color/text_clock"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        />

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/master"
                        />
                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>