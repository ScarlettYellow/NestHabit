<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Switch Button -->
    <declare-styleable name="SwitchButton">
        <attr name="swBorderWidth" format="reference|dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
        <attr name="animate" format="reference|boolean" />
        <attr name="isRect" format="reference|boolean" />
    </declare-styleable>

    <declare-styleable name="SlidedImageView">
        <attr name="siv_rate" format="float"/>
        <attr name="siv_source" format="reference"/>
        <attr name="siv_axis" format="enum">
            <enum name="horizontal" value="0"/>
            <enum name="vertical" value="1"/>
        </attr>
    </declare-styleable>
</resources>